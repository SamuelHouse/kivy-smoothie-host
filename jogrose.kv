<CircularButton>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size
    Label:
        pos: root.pos
        size: root.size
        color: 1,0,0,1
        text: root.text

<ArrowButton>:
    # canvas.before:
    #     Color:
    #         rgba: 1, 0, 0, 1
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size

    canvas:
        Color:
            rgba: 0,0,1,1
        PushMatrix
        Translate:
            x: self.pos[0]
            y: self.pos[1]
        Rotate:
            angle: root.angle
            origin: 25,25
        Mesh:
            mode: 'triangle_fan'
            vertices: 0,0,0,0, 0,25,0,0, 25,50,0,0, 50,25,0,0, 50,0,0,0
            indices: 0,1,2,3,4
        PopMatrix

    Label:
        size_hint: None, None
        pos: root.pos
        size: root.size
        color: 1,1,1,1
        text: root.text

<MyGridV@GridLayout>:
    size_hint: None, None
    size: 50, 150
    #spacing: 4
    rows: 3
    col_force_default: True
    col_default_width: 50
    row_force_default: True
    row_default_height: 50

<MyGridH@GridLayout>:
    size_hint: None, None
    size: 150, 50
    #spacing: 4
    cols: 3
    col_force_default: True
    col_default_width: 50
    row_force_default: True
    row_default_height: 50

<JogRoseWidget>:
    x10_cb: x10cb
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: 0, 0
            size: self.size

    MyGridV:
        pos_hint: {'right': 1.0, 'top': 1.0}
        ArrowButton:
            size_hint: None, None
            size: 50, 50
            text: 'Z+10' if x10cb.active else 'Z+1'
            angle: 0
            on_press: root.handle_action('Z', 1)
        Button:
            size_hint: None, None
            size: 50, 50
            text: 'Z+1' if x10cb.active else 'Z+0.1'
            on_press: root.handle_action('Z', 0.1)

    MyGridV:
        pos_hint: {'right': 1.0, 'bottom': 1.0}
        size: 50, 100

        Button:
            size_hint: None, None
            size: 50, 50
            text: 'Z-1' if x10cb.active else 'Z-0.1'
            on_press: root.handle_action('Z', -0.1)
        ArrowButton:
            size_hint: None, None
            size: 50, 50
            text: 'Z-10' if x10cb.active else 'Z-1'
            angle: 180
            on_press: root.handle_action('Z', -1)

    MyGridV:
        pos_hint: {'center_x': 0.5, 'top': 1.0}
        ArrowButton:
            size_hint: None, None
            size: 50, 50
            text: 'Y+100' if x10cb.active else 'Y+10'
            angle: 0
            on_press: root.handle_action('Y', 10)
        Button:
            size_hint: None, None
            size: 50, 50
            text: 'Y+10' if x10cb.active else 'Y+1'
            on_press: root.handle_action('Y', 1)
        Button:
            size_hint: None, None
            size: 50, 50
            text: 'Y+1' if x10cb.active else 'Y+0.1'
            on_press: root.handle_action('Y', 0.1)

    MyGridV:
        pos_hint: {'center_x': 0.5, 'bottom': 1.0}

        Button:
            size_hint: None, None
            size: 50, 50
            text: 'Y -0.1'
            on_press: root.handle_action('Y', -0.1)
        Button:
            size_hint: None, None
            size: 50, 50
            text: 'Y -1'
            on_press: root.handle_action('Y', -1)
        ArrowButton:
            size_hint: None, None
            size: 50, 50
            text: 'Y -10'
            angle: 180
            on_press: root.handle_action('Y', -10)

    MyGridH:
        pos_hint: {'left': 1, 'center_y': 0.5}

        ArrowButton:
            size_hint: None, None
            size: 50, 50
            text: 'X -10'
            angle: 90
            on_press: root.handle_action('X', -10)
        Button:
            size_hint: None, None
            size: 50, 50
            text: 'X -1'
            on_press: root.handle_action('X', -1)
        Button:
            size_hint: None, None
            size: 50, 50
            text: 'X -0.1'
            on_press: root.handle_action('X', -0.1)

    MyGridH:
        pos_hint: {'right': 1, 'center_y': 0.5}

        Button:
            size_hint: None, None
            size: 50, 50
            text: 'X 0.1'
            on_press: root.handle_action('X', 0.1)
        Button:
            size_hint: None, None
            size: 50, 50
            text: 'X 1'
            on_press: root.handle_action('X', 1)
        ArrowButton:
            size_hint: None, None
            size: 50, 50
            text: 'X +10'

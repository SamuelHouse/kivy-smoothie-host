<MacroButton@Button>:
    size: 100, 40
    size_hint: None, None

<MacroToggleButton@ToggleButton>:
    size: 100, 40
    size_hint: None, None

<MacrosWidget>:
    orientation: 'tb-lr'
    spacing: 10, 10
    padding: 10, 10
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MacroButton:
        id: feed_hold_but
        text: 'Feed Hold' if app.status != 'Hold' else 'Resume'
        on_press: root.send('!') if app.status != 'Hold' else root.send('~')

    MacroButton:
        text: 'Reprint Last'
        disabled: app.gcode_file == ''
        on_press: app.main_window.reprint()

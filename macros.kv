#: import MacrosWidget macros_widget
<MacroButton@Button>:
    size: 100, 40
    size_hint: None, None
    ud: False

<MacroToggleButton@ToggleButton>:
    size: 100, 40
    size_hint: None, None
    ud: False

<MacrosWidget>:
    orientation: 'tb-lr'
    spacing: 10, 10
    padding: 10, 10
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MacroButton:
        text: 'New Macro'
        background_color: (0,1,0,1)
        on_press: root.new_macro()

    MacroButton:
        id: feed_hold_but
        text: 'Feed Hold' if app.status != 'Hold' else 'Resume'
        on_press: root.send('!') if app.status != 'Hold' else root.send('~')

